@model LoginViewModel;

@{
    Layout = "_AuthLayout";
    ViewBag.Titulo = "Login";
}

<div class="row justify-content-center align-items-center">
    <div class="col-10 col-md-8 col-xl-5">
        <header class="container">
            <h2 class="text-primary">Teste Fácil</h2>
        </header>

        <div class="card rounded-4 border-0 mt-3">
            <div class="card-body p-4 p-md-5">
                <form asp-action="Login">
                    <h3>Login de Usuário</h3>

                    <div class="form-group d-grid gap-2 mt-3">
                        <label asp-for="Email" class="control-label fs-5">Email</label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group d-grid gap-2 mt-3">
                        <label asp-for="Senha" class="control-label fs-5">Senha</label>
                        <input asp-for="Senha" class="form-control" type="password" />
                        <span asp-validation-for="Senha" class="text-danger"></span>
                    </div>

                    <div class="form-group d-flex align-items-center justify-content-end gap-3 mt-5">
                        <a asp-action="Registro">Não tenho uma conta</a>
                        <button type="submit" class="btn btn-primary rounded-3 px-5">Confirmar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-10 col-lg order-0 order-lg-1 mx-auto text-end">
        <img src="~/images/login.svg" alt="Autenticação" class="img-fluid" />
        <a class="text-decoration-none" href="https://storyset.com/people" target="_blank">Ilustrações de pessoas por <strong>Storyset</strong></a>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}